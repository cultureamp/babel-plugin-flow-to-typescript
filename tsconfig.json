{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2018", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "preserveConstEnums": false,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"]
}
